#include <Servo.h> //servo library
 
Servo servoLeft; //left servo
Servo servoRight; //right servo
 
void setup() {
 tone(4, 3000, 1000);
 delay(1000);
 servoLeft.attach(13); //left to pin 13
 servoRight.attach(12); //right to pin 12
 
 servoLeft.writeMicroseconds(1700); //move forward at full speed
 servoRight.writeMicroseconds(1300);
}

void loop() {
 if(volts(A3) > 3.5) { // if detect bright light
   delay(500);
   servoLeft.detach(); //stop
   servoRight.detach();
   tone(4, 2000, 100); //beep
   delay(100);
 }
}
float volts(int adPin) { // returns floating point voltage
 return float(analogRead(adPin)) * 5.0 / 1024.0;
}
